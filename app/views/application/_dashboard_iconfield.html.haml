- @followers.each do |follower|
  %div(class = "emot emotion-#{follower.emotion} week followers default-classifier")
    %div.span2
      %div.emotion-icon
        %dl(class = "palette palette-#{follower.emotion}")
          %dt= follower.name
          %dd= follower.emotion
  %div(class = "emot emotion-#{follower.bayesian_emotion} week followers bayesian-classifier")
    %div.span2
      %div.emotion-icon
        %dl(class = "palette palette-#{follower.bayesian_emotion}")
          %dt= follower.name
          %dd= follower.bayesian_emotion
- @user_tweets.each do |tweet|
  %div(class = "emot emotion-#{tweet.emotion} week user default-classifier icon#{tweet.id}")
    %div.span2
      %div.emotion-icon
        %a{"href" => "#evaluate_user_tweet_modal#{tweet.id}","id" => "link_to_evaluate_user_tweet_modal#{tweet.id}", "data-toggle" => "modal", "role" => "button", "name" => "evaluate_user_tweet"}
          %dl(class = "palette palette-#{tweet.emotion}" id="iconcolor#{tweet.id}")
            %dd{"class" => "icontext#{tweet.id}"}= tweet.emotion
  %div(class = "emot emotion-#{tweet.bayesian_emotion} week user bayesian-classifier icon_bayes#{tweet.id}")
    %div.span2
      %div.emotion-icon
        %a{"href" => "#evaluate_user_tweet_modal#{tweet.id}","id" => "link_to_evaluate_user_tweet_modal#{tweet.id}", "data-toggle" => "modal", "role" => "button", "name" => "evaluate_user_tweet"}
          %dl(class = "palette palette-#{tweet.bayesian_emotion}" id="iconcolor_bayes#{tweet.id}")
            %dd{"class" => "icontext_bayes#{tweet.id}"}= tweet.bayesian_emotion
