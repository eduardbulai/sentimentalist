- @user_tweets.each do |tweet|
  %div{"id" => "evaluate_user_tweet_modal#{tweet.id}", "class" => "modal hide fade", "tabindex" => "-1", "role" => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
    %div{'class' => 'modal-header'}Here's Your Tweet:
    %div{'class' => 'modal-body'}=tweet.text
    %div{'class' => 'modal-footer'}
      %div.user-assessment-modal
        = simple_form_for '', url: {controller: 'dashboard', action: 'update_machine_learner'} do |f|
          %a.btn.btn-block.btn-surprise{"href" => "/dashboard/update_machine_learner", "type" => "submit","data-initial-emotion" => "#{tweet.emotion}", "data-tweet-id" => "#{tweet.id}", "data-dismiss" => "modal", "aria-hidden" => "true"}Surprise
