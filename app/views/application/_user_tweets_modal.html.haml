        %a.btn.btn-block.btn-sadness{ "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Sadness
        %a.btn.btn-block.btn-anger{ "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}","data-dismiss" => "modal", "aria-hidden" => "true"}Anger
        %a.btn.btn-block.btn-ambiguous{ "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Ambiguous
