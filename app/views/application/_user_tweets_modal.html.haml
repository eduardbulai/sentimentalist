          %a.btn.btn-block.btn-disgust{"href" => "/dashboard/update_machine_learner", "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Disgust
          %a.btn.btn-block.btn-fear{"href" => "/dashboard/update_machine_learner", "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Fear
          %a.btn.btn-block.btn-sadness{"href" => "/dashboard/update_machine_learner", "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Sadness
          %a.btn.btn-block.btn-anger{"href" => "/dashboard/update_machine_learner", "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}","data-dismiss" => "modal", "aria-hidden" => "true"}Anger
          %a.btn.btn-block.btn-ambiguous{"href" => "/dashboard/update_machine_learner", "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Ambiguous
