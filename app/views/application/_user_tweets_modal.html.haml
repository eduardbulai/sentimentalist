        %a.btn.btn-block.btn-disgust{ "type" => "submit", "data-tweet-id" => "#{tweet.id}","data-initial-emotion" => "#{tweet.emotion}", "data-dismiss" => "modal", "aria-hidden" => "true"}Disgust
